<div class="modal-header">
    <h5 class="modal-title">Dodaj novog korisnika</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-action="CreateUser" method="post" class="modal-form">
    <div class="modal-body">
        <div class="mb-3">
            <label for="email" class="form-label">Email adresa</label>
            <input type="email" class="form-control" id="email" name="email" required />
            <span class="text-danger" data-valmsg-for="email"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Lozinka</label>
            <input type="password" class="form-control" id="password" name="password" required />
            <div class="form-text">Lozinka mora imati najmanje 6 znakova.</div>
            <span class="text-danger" data-valmsg-for="password"></span>
        </div>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Odustani</button>
        <button type="submit" class="btn btn-primary">Dodaj korisnika</button>
    </div>
</form>

<script>
    // Enable validation for dynamic content
    $(function () {
        $.validator.unobtrusive.parse('.modal-form');
    });
</script>