@model ApartmentsProject.Models.Apartment

@{
    ViewData["Title"] = "Obriši Stan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-8 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">Obriši Stan</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">⚠️ Upozorenje: Ova radnja se ne može poništiti!</h5>
                </div>
                <div class="card-body">
                    <p class="text-danger mb-3">
                        <strong>Trebate trajno obrisati ovaj stan i sve njegove slike.</strong>
                    </p>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Detalji stana:</h6>
                            <p><strong>Naziv:</strong> @Model.Title</p>
                            <p><strong>Sobe:</strong> @Model.Rooms</p>
                            <p><strong>Cijena:</strong> €@Model.Price.ToString("N0")</p>
                            <p>
                                <strong>Status:</strong>
                                <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(Model.IsAvailable ? "Dostupan" : "Prodan")
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Što će biti obrisano:</h6>
                            <ul>
                                <li>Zapis stana</li>
                                <li>@Model.Images.Count slika iz baze podataka</li>
                                <li>@Model.Images.Count datoteka slika s poslužitelja</li>
                            </ul>
                        </div>
                    </div>

                    <hr>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Odustani - Povratak na popis</a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Jeste li potpuno sigurni da želite obrisati ovaj stan? Ovo se ne može poništiti!')">
                                🗑️ Da, obriši trajno
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>