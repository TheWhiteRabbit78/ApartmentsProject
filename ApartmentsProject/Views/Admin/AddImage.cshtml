@{
    ViewData["Title"] = "Dodaj sliku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Dodaj sliku za @ViewBag.ApartmentTitle</h2>
        <a asp-action="Details" asp-route-id="@ViewBag.ApartmentId"
           class="btn btn-secondary">Nazad</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddImage" method="post"
                          enctype="multipart/form-data">
                        <input type="hidden" name="apartmentId"
                               value="@ViewBag.ApartmentId" />

                        <div class="mb-3">
                            <label for="imageFile" class="form-label">
                                Odaberite sliku
                            </label>
                            <input type="file" class="form-control"
                                   id="imageFile" name="imageFile"
                                   accept="image/*" required />
                        </div>

                        <div class="mb-3">
                            <label for="imageType" class="form-label">
                                Tip slike
                            </label>
                            <select class="form-select" id="imageType"
                                    name="imageType" required>
                                <option value="">Odaberite tip...</option>
                                <option value="hero">Glavna slika</option>
                                <option value="gallery">Galerija</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="caption" class="form-label">
                                Opis (neobavezno)
                            </label>
                            <input type="text" class="form-control"
                                   id="caption" name="caption"
                                   placeholder="Kratki opis" />
                        </div>

                        <div class="mb-3">
                            <label for="displayOrder" class="form-label">
                                Redoslijed prikaza
                            </label>
                            <input type="number" class="form-control"
                                   id="displayOrder" name="displayOrder"
                                   value="0" min="0" />
                            <div class="form-text">Manji brojevi se prikazuju prvi</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                Učitaj sliku
                            </button>
                            <a asp-action="Details"
                               asp-route-id="@ViewBag.ApartmentId"
                               class="btn btn-secondary">Odustani</a>
                        </div>
                    </form>

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values
                                                    .SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>