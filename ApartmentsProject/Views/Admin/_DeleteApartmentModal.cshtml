@model ApartmentsProject.Models.Apartment

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title">⚠️ Obriši Stan</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<form asp-action="DeleteApartment" method="post" class="modal-form">
    <div class="modal-body">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="alert alert-danger">
            <strong>Upozorenje:</strong> Ova radnja se ne može poništiti!
        </div>

        <p><strong>Trebate trajno obrisati ovaj stan i sve njegove slike.</strong></p>

        <div class="row">
            <div class="col-12">
                <h6>Detalji stana:</h6>
                <p><strong>Naziv:</strong> @Model.Title</p>
                <p><strong>Sobe:</strong> @Model.Rooms</p>
                <p><strong>Cijena:</strong> €@Model.Price.ToString("N0")</p>
                <p>
                    <strong>Status:</strong>
                    <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                        @(Model.IsAvailable ? "Dostupan" : "Prodan")
                    </span>
                </p>
                <p><strong>Broj slika:</strong> @Model.Images.Count</p>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Odustani</button>
        <button type="submit" class="btn btn-danger">
            🗑️ Da, obriši trajno
        </button>
    </div>
</form>