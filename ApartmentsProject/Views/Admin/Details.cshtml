@model ApartmentsProject.Models.Apartment

@{
    ViewData["Title"] = "Detalji Stana";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Title</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Uredi</a>
            <a asp-action="Index" class="btn btn-secondary">Povratak na popis</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Informacije o stanu</h5>
                </div>
                <div class="card-body">
                    <p><strong>Sobe:</strong> @Model.Rooms</p>
                    <p><strong>Cijena:</strong> €@Model.Price.ToString("N0")</p>
                    <p>
                        <strong>Status:</strong>
                        <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                            @(Model.IsAvailable ? "Dostupan" : "Prodan")
                        </span>
                    </p>
                    <p><strong>Opis:</strong></p>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Slike (@Model.Images.Count)</h5>
                    <a asp-action="AddImage" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Dodaj sliku</a>
                </div>
                <div class="card-body">
                    @if (Model.Images.Any())
                    {
                        <div class="row g-2">
                            @foreach (var image in Model.Images)
                            {
                                <div class="col-6">
                                    <div class="position-relative">
                                        <img src="/uploads/@image.FileName" alt="@image.Caption" class="img-fluid rounded" style="height: 120px; width: 100%; object-fit: cover;">
                                        <div class="position-absolute top-0 end-0 p-1">
                                            <a asp-action="DeleteImage" asp-route-id="@image.Id" class="btn btn-sm btn-danger" onclick="return confirm('Obrisati ovu sliku?')">×</a>
                                        </div>
                                        <div class="position-absolute bottom-0 start-0 end-0 bg-dark bg-opacity-75 text-white p-1">
                                            <small>@image.ImageType</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Još nema učitanih slika.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>