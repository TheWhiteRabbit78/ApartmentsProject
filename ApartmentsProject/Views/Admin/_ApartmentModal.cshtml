@model ApartmentsProject.Models.Apartment

<div class="modal-header">
    <h5 class="modal-title">@(ViewBag.IsEdit == true ? "Uredi stan" : "Dodaj novi stan")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-action="SaveApartment" method="post" class="modal-form">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Naziv</label>
            <input asp-for="Title" class="form-control" placeholder="npr. Stan A3" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="SurfaceArea" class="form-label">Površina</label>
                    <input asp-for="SurfaceArea" class="form-control" placeholder="npr. 85.5 m²" />
                    <span asp-validation-for="SurfaceArea" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Rooms" class="form-label">Sobe</label>
                    <input asp-for="Rooms" class="form-control" placeholder="npr. 3+1 (3 spavaće sobe)" />
                    <span asp-validation-for="Rooms" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Floor" class="form-label">Kat</label>
            <input asp-for="Floor" class="form-control" placeholder="npr. 2. Kat - A Ulaz" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Opis</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Opišite stan..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Cijena (€)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
            <label asp-for="IsAvailable" class="form-check-label">Dostupan za prodaju</label>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Odustani</button>
        <button type="submit" class="btn btn-primary">
            @(ViewBag.IsEdit == true ? "Spremi promjene" : "Dodaj stan")
        </button>
    </div>
</form>

<script>

    $(function () {
        $.validator.unobtrusive.parse('.modal-form');
    });
</script>