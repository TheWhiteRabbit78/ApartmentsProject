<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>@ViewData["Title"] - Zoro Projekt | Stanovi u Zagrebu, Hrvatska</title>
    <meta name="description" content="Zoro Projekt - Luksuzni stanovi u Zagrebu, Hrvatska. Moderna arhitektura, odlična lokacija u naselju Blato. Idealno za obitelji i investitore.">    
    <meta name="author" content="Zoro Projekt">

    <!-- Open Graph (for social media sharing) -->
    <meta property="og:title" content="Zoro Projekt - Stanovi u Zagrebu" />
    <meta property="og:description" content="Luksuzni stanovi u naselju Blato, Zagreb. Pogledajte našu ponudu stanova." />
    <meta property="og:image" content="https://yourdomain.com/images/og-image.jpg" />
    <meta property="og:url" content="https://yourdomain.com/" />
    <meta property="og:type" content="website" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="@(User.Identity.IsAuthenticated ? "container-fluid" : "container")">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span>Zoro</span> projekt
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Admin Navigation -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Početna
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-cog me-1"></i> Administracija
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link" href="@($"{Url.Action("Index", "Admin")}")"><i class="fas fa-building me-2"></i> Stanovi</a>                                    
                                </li>
                                <li>
                                    <a class="nav-link" href="@($"{Url.Action("Users", "Admin")}#users")"><i class="fas fa-users me-2"></i> Korisnici</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                }
                else
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@($"{Url.Action("Index", "Home")}#home")">Početna</a>
                        </li>
                        <li class="nav-item">                            
                            <a class="nav-link" href="@($"{Url.Action("Index", "Home")}#about")">O Projektu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@($"{Url.Action("Index", "Home")}#apartments")">Stanovi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@($"{Url.Action("Index", "Home")}#contact")">Kontakt</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-fill">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="mt-auto">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4><span style="color: var(--secondary);">Zoro</span> projekt</h4>
                    <p>Vaš partner za kvalitetno stanovanje</p>
                </div>
                <div class="footer-section">
                    <h4>Kontakt</h4>
                    <p><i class="fas fa-phone me-2"></i> +385 98 389 721</p>
                    <p><i class="fas fa-envelope me-2"></i> info@zoroprojekt.hr</p>
                </div>
                <div class="footer-section">
                    <h4>Lokacija</h4>
                    <p><i class="fas fa-map-marker-alt me-2"></i> Blato, Zagreb</p>
                    <p><i class="fas fa-clock me-2"></i> Pon-Pet: 9:00 - 17:00</p>
                </div>
                <div class="footer-section">
                    <h4>Pratite nas</h4>
                    <div class="social-links">
                        <a href="#" class="me-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p class="mb-0">&copy; <span id="currentYear"></span> Zoro projekt d.o.o. Sva prava pridržana.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/stowball/jQuery-rwdImageMaps/jquery.rwdImageMaps.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.5/dist/index.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>