<section id="contact" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-heading">Kontaktirajte Nas</h2>

        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-lg-5 order-2 order-lg-1">
                <div class="contact-card">
                    <h3 class="fs-4 fw-semibold mb-3">Pošaljite upit</h3>
                    <form id="contactForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="apartmentId" name="apartmentId">
                        <input class="form-control mb-3" id="fullName" name="fullName" placeholder="Ime i prezime *" required>
                        <input type="email" class="form-control mb-3" id="email" name="email" placeholder="Email adresa *" required>
                        <input type="tel" class="form-control mb-3" id="phone" name="phone" placeholder="Telefon">
                        <textarea class="form-control mb-3" id="message" name="message" placeholder="Vaša poruka... *" rows="4" required></textarea>
                        <button type="submit" class="btn btn-dark w-100 py-2" id="submitBtn">
                            <span class="submit-text">Pošalji upit</span>
                            <span class="submit-loading d-none">
                                <span class="spinner-border spinner-border-sm me-2">
                                </span>Šalje...
                            </span>
                        </button>
                    </form>
                    <div id="contactMessage" class="mt-3"></div>
                </div>
            </div>

            <div class="col-lg-7 order-1 order-lg-2">
                <!-- Google Maps -->
                <div class="card mb-4">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5565.371710761047!2d15.914!3d45.754!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4765d6a4b3c8b7d5%3A0x4d3b5f2c1a9e8f6d!2sBlato%2C%20Zagreb%2C%20Croatia!5e0!3m2!1sen!2shr!4v1648234567890!5m2!1sen!2shr"
                                width="100%"
                                height="350"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <!-- Contact Information Cards -->
                <div class="row g-3">
                    <div class="col-md-6 col-12">
                        <div class="contact-info-card">
                            <i class="fas fa-phone"></i>
                            <div>
                                <h4 class="fs-6 fw-medium mb-1">Telefon</h4>
                                <p class="small text-muted mb-0">
                                    <a href="tel:+385123456789">+385 1 234 5678</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="contact-info-card">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h4 class="fs-6 fw-medium mb-1">Email</h4>
                                <p class="small text-muted mb-0">
                                    <a href="mailto:info@zoroprojekt.hr">info@zoroprojekt.hr</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="contact-info-card">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <h4 class="fs-6 fw-medium mb-1">Lokacija</h4>
                                <p class="small text-muted mb-0">Blato, Zagreb</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="contact-info-card">
                            <i class="fas fa-building"></i>
                            <div>
                                <h4 class="fs-6 fw-medium mb-1">Investitor</h4>
                                <p class="small text-muted mb-0">Zoro projekt d.o.o.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>