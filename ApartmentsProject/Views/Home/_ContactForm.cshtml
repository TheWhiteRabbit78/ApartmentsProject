<section id="contact" class="py-5 bg-light">
    <div class="container my-5">
        <h2 class="section-heading">Kontaktirajte Nas</h2>
        <p class="section-subtitle">Rado ćemo odgovoriti na sva vaša pitanja</p>

        <div class="contact-wrapper">
            <div class="row g-4">
                <!-- Contact Form -->
                <div class="col-lg-5">
                    <div class="contact-form">
                        <h3 class="fs-4 fw-semibold mb-4">Pošaljite upit</h3>
                        <form id="contactForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="apartmentId" name="apartmentId">

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Ime i prezime" required>
                                <label for="fullName">Ime i prezime *</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                                <label for="email">Email adresa *</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Telefon">
                                <label for="phone">Telefon</label>
                            </div>

                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="message" name="message" placeholder="Poruka" style="height: 120px" required></textarea>
                                <label for="message">Vaša poruka *</label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                                <span class="submit-text">
                                    <i class="fas fa-paper-plane me-2"></i>Pošalji upit
                                </span>
                                <span class="submit-loading d-none">
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    Šalje se...
                                </span>
                            </button>
                        </form>
                        <div id="contactMessage" class="mt-3"></div>
                    </div>
                </div>

                <!-- Map and Info -->
                <div class="col-lg-7">
                    <!-- Map -->
                    <div class="map-container mb-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7872.3959689156845!2d15.922964964451207!3d45.764931409566806!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4765d414d37e1b43%3A0x1d5ca167918bd27a!2sZdihovska%20ul.%202%2C%2010000%2C%20Zagreb!5e0!3m2!1shr!2shr!4v1749643440930!5m2!1shr!2shr" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                    <!-- Contact Info Cards -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="contact-info-card">
                                <i class="fas fa-phone-alt"></i>
                                <div>
                                    <h4 class="fs-6 fw-semibold mb-1">Telefon</h4>
                                    <a href="tel:+385 98 389 721" class="text-muted">+385 98 389 721</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-info-card">
                                <i class="fas fa-envelope"></i>
                                <div>
                                    <h4 class="fs-6 fw-semibold mb-1">Email</h4>
                                    <a href="mailto:info@zoroprojekt.hr" class="text-muted">info@zoroprojekt.hr</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-info-card">
                                <i class="fas fa-map-marker-alt"></i>
                                <div>
                                    <h4 class="fs-6 fw-semibold mb-1">Adresa</h4>
                                    <p class="text-muted mb-0">Blato, Zagreb</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-info-card">
                                <i class="fas fa-clock"></i>
                                <div>
                                    <h4 class="fs-6 fw-semibold mb-1">Radno vrijeme</h4>
                                    <p class="text-muted mb-0">Pon-Pet: 9:00 - 17:00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>