        <!-- Text Content -->
        <h2 class="text-center fw-bold mb-3" style="color: var(--primary);">Dostupni stanovi</h2>        

        <hr />

        <a href="~/assets/images/tlocrt_prizemlje.png" data-toggle="lightbox" data-size="fullscreen">
            <img src="~/assets/images/tlocrt_prizemlje.png" style="max-width: 100%;" id="floor-plan-image" loading="lazy" />
        </a>
        <h4 class="text-center fw-bold mb-3" style="color: var(--primary);">Prizemlje</h4>

        <div class="row my-3 g-4">
            @foreach (var apartment in Model.Where(a => a.Floor.Contains("Prizemlje")))
