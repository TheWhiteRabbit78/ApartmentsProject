                            <div class="apartment-card">
                                <div class="apartment-card-image">
                                    @if (!string.IsNullOrEmpty(apartment.ImageUrl))
                                    {
                                        <img src="@apartment.ImageUrl" alt="@apartment.Title" loading="lazy">
                                    }
                                    else
                                    {
                                        <div class="placeholder-image">
                                            <i class="fas fa-home fa-3x"></i>
                                            <p class="mt-2">Nema slike</p>
                                        </div>
                                    }
                                </div>
                                <div class="apartment-card-body">
                                    <h3 class="apartment-card-title">@apartment.Title</h3>
                                    <p class="apartment-card-subtitle">@apartment.Rooms</p>
                                    <div class="apartment-info">
                                        <div class="apartment-feature">
                                            <i class="fas fa-expand"></i>
                                            <span>@apartment.SurfaceArea</span>
                                        </div>
                                        <div class="apartment-feature">
                                            <i class="fas fa-layer-group"></i>
                                            <span>@apartment.Floor</span>
                                        </div>
                                    </div>
                                    <p class="apartment-price">€@apartment.Price.ToString("N0")</p>
