@model IEnumerable<ApartmentsProject.Models.Apartment>
@{
    ViewData["Title"] = "Početna - Stambena Zgrada Blato";
}

<!-- Hero Section -->
<section id="home" class="hero-section">
    <img src="~/assets/images/hero.jpg" alt="Moderna zgrada" class="hero-image">
    <div class="hero-content">
        <div class="container">
            <h1 class="display-3 fw-bold mb-3">Stambena Zgrada Blato</h1>
            <p class="lead mb-4">Luksuzni stanovi u srcu Zagreba</p>
            <a href="#apartments" class="btn btn-hero scroll-link">
                <i class="fas fa-search me-2"></i>Istraži stanove
            </a>
        </div>
    </div>
</section>

<section id="about" class="py-5 d-flex justify-content-center bg-light">
    <div class="container my-5">
        <!-- Carousel -->
        <div id="aboutCarousel" class="carousel slide mb-5 shadow-sm rounded overflow-hidden" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a href="~/assets/images/building_side.jpg" data-toggle="lightbox" data-size="fullscreen">
                        <img src="~/assets/images/building_side.jpg" class="d-block w-100" alt="Zgrada" loading="lazy">
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="~/assets/images/hero.jpg" data-toggle="lightbox" data-size="fullscreen">
                        <img src="~/assets/images/hero.jpg" class="d-block w-100" alt="Zgrada" loading="lazy">
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="~/assets/images/building_rear.jpg" data-toggle="lightbox" data-size="fullscreen">
                        <img src="~/assets/images/building_rear.jpg" class="d-block w-100" alt="Zgrada" loading="lazy">
                    </a>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#aboutCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#aboutCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>

        <!-- Feature Grid -->
        <div class="row text-center g-4 mb-5">
            <div class="col-md-3">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="fas fa-map-marker-alt fa-2x mb-2" style="color: var(--secondary);"></i>
                    <h5 class="fw-bold" style="color: var(--dark);">Lokacija</h5>
                    <p class="text-muted mb-0">Blato, Zagreb</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="fas fa-parking fa-2x mb-2" style="color: var(--secondary);"></i>
                    <h5 class="fw-bold" style="color: var(--dark);">Parking</h5>
                    <p class="text-muted mb-0">26 PM + 10 GM</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="fas fa-building fa-2x mb-2" style="color: var(--secondary);"></i>
                    <h5 class="fw-bold" style="color: var(--dark);">Stanovi</h5>
                    <p class="text-muted mb-0">34 moderne jedinice</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded shadow-sm bg-white h-100">
                    <i class="fas fa-briefcase fa-2x mb-2" style="color: var(--secondary);"></i>
                    <h5 class="fw-bold" style="color: var(--dark);">Investitor</h5>
                    <p class="text-muted mb-0">Zoro projekt d.o.o.</p>
                </div>
            </div>
        </div>
        <!-- Text Content -->
        <h2 class="text-center fw-bold mb-3" style="color: var(--primary);">O Projektu</h2>
        <p class="text-center text-muted fs-5 mb-4">Moderna stambena zgrada s 34 luksuzna stana</p>

        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <h3 class="fw-semibold mb-3" style="color: var(--primary-dark);">Stambena zgrada na lokaciji Zdihovska 2</h3>
                <p class="text-justify text-dark">
                    Moderan stambeni kompleks koji nudi savršenu kombinaciju udobnosti, funkcionalnosti i elegancije.
                    Projekt je pažljivo osmišljen kako bi zadovoljio potrebe suvremenog načina života. Korišteni su visoko
                    kvalitetni materijali, energetski učinkovita rješenja i moderni arhitektonski pristupi. Svaki stan nudi
                    maksimalan komfor uz obilje prirodnog svjetla, prostrane tlocrtne rasporede te privatne terase ili balkone.
                    Zgrada se smješta u naselju Blato – poznato po svojoj tišini, zelenilu i brzoj povezanosti s ostatkom grada.
                </p>
                <p class="text-justify text-dark">
                    Stanovi variraju od manjih jednosobnih do prostranih četverosobnih jedinica, što omogućava izbor prema vašim potrebama.
                    Svi stanovi su opremljeni modernim instalacijama, podnim grijanjem, vrhunskom stolarijom i energetskim sustavima.
                </p>
                <p class="text-justify text-dark">
                    Investitor projekta, <strong>Zoro projekt d.o.o.</strong>, renomirana je domaća tvrtka s bogatim iskustvom u izgradnji stambenih objekata.
                    Njihov fokus je na visokoj kvaliteti, sigurnosti i transparentnosti kroz cijeli proces kupnje.
                </p>
                <p class="text-justify text-dark">
                    Uz odličnu prometnu povezanost, mirnu okolinu i cjelovito planiran koncept gradnje, ovaj projekt predstavlja izvrsnu priliku za sigurno ulaganje ili stvaranje novog doma.
                </p>
            </div>
        </div>

    </div>
</section>

<!-- Apartments Section -->
<section id="apartments" class="py-5">
