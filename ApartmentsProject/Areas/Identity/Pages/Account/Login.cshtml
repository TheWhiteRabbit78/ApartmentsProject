@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="identity-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="identity-card">
                    <div class="identity-header">
                        <h1>Prijava</h1>
                        <p>Prijavite se u svoj račun</p>
                    </div>

                    <form class="identity-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                   placeholder="ime@primjer.com" />
                            <label asp-for="Input.Email">Email adresa</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                   placeholder="Lozinka" />
                            <label asp-for="Input.Password">Lozinka</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="remember-me">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Zapamti me
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary identity-submit">Prijavite se</button>
                    </form>

                    <div class="identity-links">
                        <a href="/">← Natrag na početnu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}